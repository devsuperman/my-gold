@model List<Gasto>
@{  
    ViewData["Title"] = "Gastos";
}

<div class="d-flex">

    <h1 class='flex-grow-1'>
        <i class="bi bi-coin"></i>
        @ViewData["Title"]
    </h1>

    <div>
        <a class="btn btn-primary" asp-action="Anadir">
            <i class="bi bi-plus"></i> AÃ±adir
        </a>    
    </div>

</div>
<hr>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-action d-flex" asp-action="Editar" asp-route-id="@item.Id">
            <span class='flex-grow-1'>
                @item.Fecha.ToShortDateString() - @item.Categoria.Nombre @item.Nombre
            </span>            
            <span>
                R$ @item.Valor.Value.ToString("N2")
            </span>
        </a>
    }
</div>