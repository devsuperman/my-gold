@page "/gastos/form/{Id:int?}"
@attribute [Authorize]

<PageTitle>
    @Titulo
</PageTitle>

<div class="d-flex">
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Href="/gastos" Size="Size.Small"/>
    <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Size="Size.Large" />
    <MudText Typo="Typo.h4" class='flex-grow-1'>
        @Titulo
    </MudText>
</div>


<MudDivider />

<EditForm method="post" Model="Model" OnValidSubmit="Save" FormName="form" Enhance>

    <DataAnnotationsValidator />

    <input type="hidden" name="Gasto.Id" value="@Id" />

    <div class="mb-3">
        <MudDatePicker Label="Fecha" @bind-Date="Model.Fecha"/>        
        <ValidationMessage For="() => Model.Fecha" class="text-danger" />
    </div>

    <div class="mb-3">
        <MudSelect @bind-Value="Model.CategoriaId" Label="Categoria">
            <MudSelectItem Value="0">Selecione</MudSelectItem>
            @foreach (var cat in Categorias)
            {
                <MudSelectItem Value="@cat.Id">@cat.Nombre</MudSelectItem>
            }
        </MudSelect>

        <ValidationMessage For="() => Model.CategoriaId" class="text-danger" />
    </div>

    <div class="mb-3">
        <MudTextField @bind-Value="Model.Nombre" Label="Nombre" Variant="Variant.Text"></MudTextField>
        <ValidationMessage For="() => Model.Nombre" class="text-danger" />
    </div>

    <div class="mb-3">
        <MudTextField Label="Real" Variant="Variant.Text" @bind-Value="Model.Valor" @bind-Value:format="F2"
            @oninput="UpdateGuarani" />
        <ValidationMessage For="() => Model.Valor" class="text-danger" />
    </div>

    <div class="mb-3">
        <MudTextField Label="Guarani" Variant="Variant.Text" @bind-Value="Guarani" @oninput="UpdateReal" />
    </div>

    <div class="d-flex justify-content-end">


        @if (disableButton)
        {
            <button type="submit" class="btn btn-primary ms-2" disabled="@disableButton">
                <div class="d-flex align-items-center">
                    <div class="spinner-border text-primery me-2" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <span> Cargando...</span>
                </div>
            </button>
        }
        else
        {
            <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Save" ButtonType="ButtonType.Submit" />
        }

    </div>


</EditForm>


@code {

    public string Titulo => Id != 0 ? "Editar Gasto" : "Criar Gasto";
    public const decimal Cambio = 1300;
    public bool disableButton = false;
    public decimal? Guarani { get; set; }

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    public Gasto Model { get; set; } = new();


    public List<Categoria> Categorias { get; set; } = new();

    public void UpdateGuarani(ChangeEventArgs e)
    {
        var input = e.Value.ToString();

        if (string.IsNullOrEmpty(input))
        {
            Guarani = null;
            return;
        }

        var real = Convert.ToDecimal(input);
        Guarani = real * Cambio;
        Console.WriteLine($"UpdateGuarani Real {real} Guarani {Guarani}");
    }

    public void UpdateReal(ChangeEventArgs e)
    {
        var input = e.Value.ToString();

        if (string.IsNullOrEmpty(input))
        {
            Model.Valor = 0;
            return;
        }

        var guarani = Convert.ToDecimal(input);

        if (guarani < Cambio)
            return;

        Model.Valor = Math.Round(guarani / Cambio, 0);

        Console.WriteLine($"UpdateReal Real {Model.Valor} Guarani {guarani}");
    }


    protected override async Task OnInitializedAsync()
    {
        Categorias = await _categoriasService.ListAll();

        if (Id > 0)
        {
            Model = await _gastosService.Get(Id);
            Guarani = Model.Valor * Cambio;
        }
    }

    public async Task Save()
    {
        disableButton = true;
        await _gastosService.Upsert(Model);
        _navigation.NavigateTo("/gastos");
    }
}